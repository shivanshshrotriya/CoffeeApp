<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/test"
    android:layout_height="wrap_content">


    <ImageView
        android:src="@drawable/source"
        android:layout_margin="5dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:text="Coffee_type"
        android:padding="5dp"
        android:id="@+id/coffee_type_tv"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Coffee_size"
        android:id="@+id/coffee_size_tv"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/coffee_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Amount"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimary"
        android:id="@+id/amount_tv"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Date"
        android:id="@+id/date_time_tv"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/coffee_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>