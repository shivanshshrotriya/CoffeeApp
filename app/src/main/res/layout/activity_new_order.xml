<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewOrder">


    <include layout="@layout/header"
        android:id="@+id/header"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/personal_details_frame"
                android:background="@drawable/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name_tv"
                        android:text="Name"
                        android:layout_marginLeft="0dp"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:id="@+id/name_et"
                        android:background="@drawable/rect"
                        android:hint="Enter Your Name"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/coffee_type_frame"
                android:layout_below="@id/personal_details_frame"
                android:background="@drawable/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Coffee_type_tv"
                    android:text="Coffee Type"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/coffee_type_rg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/Espresso_rb"
                            android:text="Espresso"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <RadioButton
                            android:id="@+id/Capetuno_rb"
                            android:text="Capetuno"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <RadioButton
                            android:id="@+id/Latte_rb"
                            android:text="Latte"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/source"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

                        <ImageView
                            android:src="@drawable/source"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

                        <ImageView
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:src="@drawable/source"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

                    </LinearLayout>



                </LinearLayout>



            </FrameLayout>


            <FrameLayout
                android:id="@+id/coffee_size_frame"
                android:layout_below="@id/coffee_type_frame"
                android:background="@drawable/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Cup Size"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/coffee_size"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:layout_margin="5dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

                        <ImageView
                            android:src="@drawable/coffee_size"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

                        <ImageView
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:src="@drawable/coffee_size"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>

                    </LinearLayout>


                    <RadioGroup
                        android:id="@+id/cup_size_rg"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/Regular_cb"
                            android:text="Regular"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RadioButton
                            android:id="@+id/Medium_cb"
                            android:text="Medium"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RadioButton
                            android:layout_weight="1"
                            android:id="@+id/Large_cb"
                            android:text="Large"
                            android:textColor="@color/colorPrimary"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RadioGroup>


                </LinearLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_below="@id/coffee_size_frame"
                android:background="@drawable/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Total"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:id="@+id/total_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Amount"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:id="@+id/total_amt_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:text="Place Order"
                        android:background="@drawable/rect"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/place_order_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/total_amt_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>